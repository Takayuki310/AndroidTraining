<resources>

	<!-- MainPhotoView独自属性 -->
	<declare-styleable name="MainPhotoView">
		<!-- サムネイルの自動ページ送りのON/OFF -->
		<attr name="thumbnail_auto_paging_on" format="boolean" />
		<!-- サムネイルの自動ページ送りの周期(ミリ秒) -->
		<attr name="thumbnail_auto_paging_duration" format="integer" />
		<!-- サムネイルの自動ページ送りのスクロール速度(ミリ秒) -->
		<attr name="thumbnail_auto_paging_scroll_speed" format="integer" />
		<!-- サムネイルのフォーカス色（アルファ値まで指定しないと塗りつぶしてしまう） -->
		<attr name="thumbnail_focused_color" format="color"/>
		<!-- サムネイルの非フォーカス色 -->
		<attr name="thumbnail_unfocused_color" format="color"/>


		<!--
		ストロークの幅ですdimensionを指定することで10dpなどの単位を付けた値が利用できます。
		赤い三角形ではこの値が10dpに設定されています 。
		-->
		<attr name="stroke_width" format="dimension" />
	</declare-styleable>
</resources>
